        <div id="signup-container">
            <% if (user) {%>
                <!-- If user, automatically redirect to the 'game-math' page: -->
                <meta http-equiv="refresh" content="0; url='/game-math1'">
        
            <% } else  { %> 
                <div class="button-signup" id="fb" onmousedown="func_buttondown(this)" onmouseup="func_buttonup(this)">
                <a class="facebook-btn" href="/auth/facebook">SIGN UP WITH FACEBOOK</a>
            </div>
        
            <div class="button-signup" id="google" onmousedown="func_buttondown(this)" onmouseup="func_buttonup(this)">
                <a class="google-btn" href="/auth/google">SIGN UP WITH GOOGLE+</a>
            </div>
        
            <div class="button-signup" id="guest" onmousedown="func_buttondown(this)" onmouseup="func_buttonup(this)">
                <a class="passport-local-btn" href="/login/">BE OUR GUEST</a>
            </div>
            
            <!-- this is a form to make a post -->
            <form class="button-signup"  method="POST", action="/auth/passport-local/">  
                <input type="hidden" name="username" value="guest@guest.com">
                <input type="hidden" name="password" value="guest">
                <input type ="submit" value = "BE OUR GUEST" />
            </form>

            <% } %>
