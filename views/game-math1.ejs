            <div class="nav-button" id="nav-logout">
                <a href="/auth/logout">LOG<br/>OUT</a>
            </div>

            <div class="nav-button" id="new-game" onmousedown="orderNewGame(this)">
                NEW<br/>GAME
            </div>
        
            <div class="nav-button" id="nav-profile">
                Profile
            </div>
        </nav>
        
        <div id="title">
            <div id="dynamic-title">
                Choose Your Task Type
            </div>
            
        </div>
        
        <div id='choose-task'>
            <div class="button-choose" id="plus" value="plus" onmousedown="taskPlus(this)">
                ADDITION
            </div>
            <div class="button-choose" id="minus" value="minus" onmousedown="taskMinus(this)">
                SUBTRACTION</div>
            <div class="button-choose" id="multiply" value="multiply" onmousedown="loadTaskMulty(this)">
                MULTIPLICATION</div>
            <div class="button-choose" id="division" value="division" onmousedown="loadTaskDiv(this)">
                DIVISION</div>
        </div>
        
        
        
        <div id="decimal_num">1</div>
        
        <!-- ELEMENT 2 - The Task -->
        <div id="task-container">
        
            <div class="number" id="number1"></div>
        
            <div class="number" id="sign1">+</div>
        
            <div class="number" id="number2"></div>
        
            <div class="number" id="line">=</div>
        
            <div class="answer" id="results1">?</div>
            <div class="answer" id="results2">?</div>
            <div class="answer" id="results3">?</div>
            <div class="answer" id="results4">?</div>
        
        </div>
        
        <!-- ELEMENT 3 - The Step Container -->
        <form id="step-container">
            <div class="digit" id="digit1"></div>
        
            <div class="digit" id="sign2"></div>
        
            <div class="digit" id="digit2"></div>
        
            <div class="digit" id="sign3"></div>
        
            <div class="digit" id="decimal-step">1</div>
        
            <div class="digit" id="sign-equal">
                =
            </div>
        
            <div>
                <input class="digit" name="something" id="user-answer" type="number" pattern="[0-9]*" value="">
            </div>
        
            <div type="submit" class="button-choose" id="submit-answer" onclick="evaluateInput()">
                SEND
            </div>
        </form>
        
